/*!** arkadium --> leaderboard **!*/

.leaderboard
	position: relative
	height: 100%
	font-family: font_family_bold
	overflow: hidden

	@media screen and (min-width: 560px)
		height: auto

	&__header
		background-color: #e56d48

	&__logo
		float: left
		height: 18px
		line-height: 18px
		font-size: 18px
		margin-left: 20px
		margin-top: 11px
		color: #fff

	&__nav-ctrl
		float: right
		text-indent: -9999px
		font-size: 0
		height: 40px
		width: 35px
		background-color: transparent
		border: none
		padding: 14px 15px 14px 0

		span
			height: 2px
			background-color: #fff
			display: block

			&:before,
			&:after
				content: ''
				display: block
				position: relative
				height: 2px
				background-color: #fff

			&:before
				top: -4px

			&:after
				top: 2px

	&__tab-ctrl
		font-size: 0
		&_wide
			float: right
			margin-top: 11px
			display: none

			@media screen and (min-width: 560px)
				display: block

		&_narrow
			padding: 8px 0 5px
			border-bottom: 1px solid #ec9479
			box-shadow: inset 0 -1px #f8d8ce;

			@media screen and (min-width: 560px)
				display: none

	&__tab-item
		font-size: 14px
		display: inline-block
		vertical-align: middle
		transition: font-size .2s ease,
					color .2s ease;
		box-sizing: border-box

		&_active
			font-size: 18px

			.leaderboard__tab-ctrl_wide &
				.leaderboard__tab-link
					color: #fff

		.leaderboard__tab-ctrl_wide & + &
			border-left: 1px solid #f9ddd4

		.leaderboard__tab-ctrl_narrow &
			width: 33.333333%
			border-width: 0 1px
			border-style: solid
			border-left-color: #f8f8f8;
			border-right-color: #e9e8e8

			&:first-child
				border-left-color: transparent

			&:last-child
				border-right-color: transparent

			&_active
				.leaderboard__tab-link
					color: #e56d48
				
	&__tab-link
		display: block
		height: 18px
		line-height: 17px
		text-decoration: none
		text-align: center
		text-transform: uppercase

		.leaderboard__tab-ctrl_wide &
			width: 106px
			color: #000

		.leaderboard__tab-ctrl_narrow &
			color: #807f81

	&__persons
		position: absolute
		top: 72px
		right: 0
		left: 0
		bottom: 0
		overflow: auto
		width: 100%
		padding-right: 7px
		box-sizing: border-box

		@media screen and (min-width: 560px)
			position: relative
			top: auto
			width: auto
			margin-top: 7px
			height: 160px
			padding-right: 0
			transition: margin-right .3s ease

		.gamelist-opened &
			@media screen and (min-width: 560px)
				margin-right: 260px

	&__list
		list-style: none
		padding: 0
		margin: 10px 0 0

		@media screen and (min-width: 560px)
			font-size: 0
			white-space: nowrap
			margin: 0
			padding: 0 7px


	&__item
		&:nth-child(even)
			background-color: #e2e1e1

		& + &
			border-top: 1px solid #f1f1f1
		
		@media screen and (min-width: 560px)
			display: inline-block
			vertical-align: top
			width: 110px

			& + &
				border-left: 1px solid #f1f1f1
				border-top: none

	&__card
		font-size: 18px
		font-family: font_family_normal
		padding: 8px 0 8px 32px
		position: relative

		@media screen and (min-width: 560px)
			padding: 0

	&__card-badge
		display: none
		position: absolute
		right: 10px
		top: 10px
		width: 43px
		height: 40px
		background-position: 0 0
		background-repeat: no-repeat

		.leaderboard__card_gold &
		.leaderboard__card_silver &
		.leaderboard__card_bronze &
			display: block

		.leaderboard__card_gold &
			background-image: url("../images/badge-gold.png")
		.leaderboard__card_silver &
			background-image: url("../images/badge-silver.png")
		.leaderboard__card_bronze &
			background-image: url("../images/badge-bronze.png")

		@media screen and (min-width: 560px)
			right: auto
			left: 1px
			top: 57px
			width: 30px
			height: 28px

			.leaderboard__card_gold &
				background-image: url("../images/badge-gold_small.png")
			.leaderboard__card_silver &
				background-image: url("../images/badge-silver_small.png")
			.leaderboard__card_bronze &
				background-image: url("../images/badge-bronze_small.png")

	&__card-position
		position: absolute
		box-sizing: border-box
		top: -5px
		left: 0
		width: 40px
		height: 20px
		font-size: 14px
		line-height: 18px
		color: #423f4d
		border-width: 1px 1px 1px 0
		border-style: solid
		border-color: #e56d48
		border-radius: 2px
		background-color: #fff
		text-align: right
		padding-right: 7px

		.leaderboard__card_gold &
		.leaderboard__card_silver &
		.leaderboard__card_bronze &
			font-size: 18px
			color: #fe5400

		@media screen and (min-width: 560px)
			border-width: 1px
			width: 30px
			padding-right: 3px
			top: 4px
			left: 1px

	&__card-border
		width: 78px
		height: 78px
		border-radius: 39px
		padding: 4px 3px 1px 2px
		background-color: #70d7fd
		box-sizing: border-box;
		position: relative
		z-index: 1
		float: left
		margin-right: -39px

		@media screen and (min-width: 560px)
			float: none
			margin: 5px 4px 0 28px

	&__card-cover
		overflow: hidden
		width: 73px
		height: 73px
		line-height: 0
		border-radius: 37px

	&__card-fullname
		margin: 10px 60px 10px 84px
		text-transform: uppercase

		@media screen and (min-width: 560px)
			margin: 6px 5px 4px
			text-align: center
			line-height: 18px
			font-size: 14px

	&__card-count
		background-color: #70d7fd
		text-align: right
		margin-left: 39px
		padding-right: 6px
		height: 22px
		line-height: 22px

		.leaderboard__card_gold &
			color: #ff5050

		@media screen and (min-width: 560px)
			margin-left: 0
			text-align: center


	&__games
		position: absolute
		top: 40px
		bottom: 0
		width: 100%
		right: -100%
		background-color: #fff
		z-index: 2
		box-shadow: inset 0 -1px 0 #dddddd;
		border-bottom: 1px solid #a2a1a3
		overflow: auto
		padding-right: 7px
		box-sizing: border-box
		transition: right .3s ease;

		@media screen and (min-width: 560px)
			width: 260px
			border-left: 1px solid #000

		.gamelist-opened &
			right: 0

	&__gamelist
		padding: 0
		margin: 0
		list-style: none
		font-family: font_family_normal
		font-size: 18px

	&__gamelist-item
		box-shadow: inset 0 -1px 0 #dddddd;
		font-size: 18px

		& + &
			border-top: 1px solid #a2a1a3

	&__gamelist-link
		text-transform: uppercase
		display: block
		text-decoration: none
		white-space: nowrap
		text-overflow: ellipsis
		overflow: hidden
		padding: 0 16px
		height: 31px
		line-height: 31px
		color: #99999a

		.leaderboard__gamelist-item_active &
			color: #e56d48

/*!** arkadium --> end of leaderboard **!*/